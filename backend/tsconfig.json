{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "baseUrl": ".",
        "paths": {
            "@types/*": ["../shared/types/*"],
            "@/*": ["src/*"]
        },
        "moduleResolution": "Node",
        "outDir": "dist",
        "importsNotUsedAsValues": "remove",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vitest/globals"]
    },
    "include": ["src/**/*", "../shared/types/**/*"],
    "exclude": ["node_modules"]
}
